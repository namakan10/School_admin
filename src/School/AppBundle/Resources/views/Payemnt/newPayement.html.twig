{% extends '@SchoolApp/layout.html.twig' %}

{% block title %}Payement - El√®ves{% endblock %}
{% block activeClasses %}active{% endblock %}

{% block content %}
    <div class="col-sm-2"></div>
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                {% block subTitle %}
                    <h4 class="card-title"><a href="{{ path('school_app_sudent_details', {'id' : id}) }}" style="color: black"><i class="far fa-arrow-alt-circle-left"></i></a> Nouveau Payement</h4>
                {% endblock %}
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                <div class="row">
                    <div class="col-md-6 pr-1">
                        <div class="form-group">
                            {{ form_label(form.stdname) }}
                            {{ form_widget(form.stdname, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="col-md-6 pl-1">
                        <div class="form-group">
                            {{ form_label(form.stdlastname) }}
                            {{ form_widget(form.stdlastname, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 pr-1">
                        <div class="form-group">

                            {{ form_label(form.Classe) }}
                            {{ form_widget(form.Classe, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                </div>
                <div class="row">

                    <div class="col-md-6 pr-1">
                        <div class="form-group">
                            {{ form_label(form.Motif) }}
                            {{ form_widget(form.Motif, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="col-md-6 pl-1">
                        <div class="form-group">
                            {{ form_label(form.Montant) }}
                            {{ form_widget(form.Montant, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                </div>
                <br/><br/>
                <div class="row">

                    <div class="col-md-7 pr-1">
                        <div class="form-group">
                            {{ form_widget(form.Submit, {'attr': {'class': 'btn btn-primary'}}) }}
                        </div>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block scriptCustom %}
    <script>
        {% if error is defined %}
            alert("{{ error }}");
        {% endif %}
    </script>
{% endblock %}