{% extends '@SchoolApp/layout.html.twig' %}

{% block title %}Historique de payement{% endblock %}

{% block activeClasses %}active{% endblock %}

{% block content %}
    <div class="col-md-12">
        <div class="card strpied-tabled-with-hover">
            <div class="card-header ">
                <h4 class="card-title col">
                    <span class="col-sm-3"><a href="{{ path('school_app_sudent_details', {'id' : id}) }}" style="color: black"><i class="far fa-arrow-alt-circle-left"></i></a> Historique de payement</span>
                    <a href="{{ path('new_payment', {'id' : id}) }}"><button class="btn btn-success" style="margin-left: 450px">Nouveau payement</button></a>
                </h4>
            </div>
            <div class="card-body table-full-width table-responsive">
                <table class="table table-hover table-striped">
                    <thead>
                    <th>Date</th>
                    <th>Motif</th>
                    <th>Montant</th>
                    {% if admin %}
                        <th></th>
                        <th></th>
                    {% endif %}
                    </thead>
                    <tbody>

                    {% if record %}
                        {% for rec in record %}
                            <tr>
                                <td>{{ rec.date|date('d-M-y') }}</td>
                                <td>{{ rec.motif }}</td>
                                <td>{{ rec.amout }}</td>
                                {% if admin %}
                                <td><a href={{ path('edit_payment', {'id' : rec.id}) }}""><i class="fas fa-edit"></i></a></td>
                                <td><a href="" style="color: red"><i class="fas fa-trash-alt"></i></a></td>
                                {% endif %}
                            </tr>
                        {% endfor %}
                    {% else %}

                    {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}