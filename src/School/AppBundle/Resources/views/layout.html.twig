    <body>
    <div class="wrapper">
        <div class="sidebar" data-image="{{ asset('bundles/schoolapp/images/back-to-school.jpg') }}" data-color="purple">
            <!--
        Tip 1: You can change the color of the sidebar using: data-color="purple | blue | green | orange | red"

        Tip 2: you can also add an image using data-image tag
    -->
            <div class="sidebar-wrapper">
                <div class="logo">
                    <span class="simple-text">
                        école privée mamadou coulibaly
                    </span>
                </div>
                <ul class="nav">
                    <li class="nav-item {% block activeAcceuil %}{% endblock %}">
                        <a class="nav-link" href="{{ path('school_app_homepage') }}">
                            <i class="fa fa-home"></i>
                            <p>Accueil</p>
                        </a>
                    </li>
                    <li class="nav-item {% block activeClasses %}{% endblock %}">
                        <a class="nav-link" href="{{ path('school_app_class') }}">
                            <i class="fa fa-chalkboard"></i>
                            <p>Classes</p>
                        </a>
                    </li>
                    <li class="nav-item {% block activeInscripion %}{% endblock %}">
                        <a class="nav-link" href="{{ path('school_app_sudent_registration') }}">
                            <i class="fa fa-pencil-alt"></i>
                            <p>Inscription</p>
                        </a>
                    </li>
                    {#
                        <li class="nav-item {% block activePay %}{% endblock %}">
                        <a class="nav-link" href="">
                            <i class="fa fa-credit-card"></i>
                            <p>Payement</p>
                        </a>
                        </li>
                    #}

                    <li class="nav-item {% block activeCaisse %}{% endblock %}">
                        <a class="nav-link" href="{{ path('caisse_view') }}">
                            <i class="fa fa-coins"></i>
                            <p>Caisse</p>
                        </a>
                    </li>

                    <li class="nav-item {% block activeUser %}{% endblock %}">
                        <a class="nav-link" href="{{ path('fos_user_profile_show') }}">
                            <i class="fa fa-user"></i>
                            <p>Mon profil</p>
                        </a>
                    </li>

                    <!---
                    <li class="nav-item active active-pro">
                        <a class="nav-link active" href="upgrade.html">
                            <i class="nc-icon nc-alien-33"></i>
                            <p>Upgrade to PRO</p>
                        </a>
                    </li>
                    -->
                </ul>
            </div>
        </div>

        <div class="main-panel">
            <!-- Navbar -->

            <nav class="navbar navbar-expand-lg " color-on-scroll="500">
                <div class=" container-fluid  ">
                    <a class="navbar-brand">
                        {% if definied == true %}
                           Année scolaire : {{ year.year }}
                        {% else %}
                            Accueil
                        {% endif %}
                    </a>
                    <button href="" class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-bar burger-lines"></span>
                        <span class="navbar-toggler-bar burger-lines"></span>
                        <span class="navbar-toggler-bar burger-lines"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end" id="navigation">

                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item">

                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link">
                                    <span> <span class="fa fa-user"></span> {{ user }}</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('fos_user_security_logout') }}">
                                    <span style="color: mediumpurple;">Deconnexion <span class="fa fa-power-off"></span></span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- End Navbar -->
            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        {% block content %}{% endblock %}
                    </div>
                </div>
            </div>
            <footer class="footer">
                <div class="container">
                    <nav>

                        <p class="copyright text-center">
                            ©
                            <script>
                                document.write(new Date().getFullYear())
                            </script>
                            <a href="http://www.creative-tim.com">Ghost Studio</a>, all right reserved
                        </p>
                    </nav>
                </div>
            </footer>
        </div>
    </div>
