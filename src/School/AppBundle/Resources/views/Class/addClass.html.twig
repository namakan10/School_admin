{% extends '@SchoolApp/layout.html.twig' %}

{% block title %}Ajout de classe{% endblock %}

{% block activeClasses %}active{% endblock %}

{% block content %}
    <div class="col-sm-2"></div>
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">{% block subTitle %}Création d'une classe{% endblock %}</h4>
            </div>
            <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                        <div class="row">
                            <div class="col-md-6 pr-1">
                                <div class="form-group">
                                    {{ form_label(form.numero, "Numéro") }}
                                    {{ form_widget(form.numero, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="col-md-6 pl-1">
                                <div class="form-group">
                                    {{ form_label(form.nom) }}
                                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 pr-1">
                                <div class="form-group">

                                    {{ form_label(form.capMax) }}
                                    {{ form_widget(form.capMax, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="col-md-6 pl-1">
                                <div class="form-group">
                                    {{ form_label(form.level) }}
                                    {{ form_widget(form.level, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 pr-1">
                                <div class="form-group">
                                    {{ form_label(form.registration) }}
                                    {{ form_widget(form.registration, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="col-md-6 pl-1">
                                <div class="form-group">
                                    {{ form_label(form.annual) }}
                                    {{ form_widget(form.annual, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                        </div>

                        <br/><br/>
                        {% block submit %}
                            {{ form_widget(form.Creer, {'attr': {'class': 'btn btn-info'}}) }}
                        {% endblock %}
                    {{ form_end(form) }}
            </div>
        </div>

        {% block backbutton %}

        {% endblock %}
    </div>

{% endblock %}

{% block scriptCustom %}
    <script>
        {% if error is defined %}
        alert("{{ error }}");
        {% endif %}
    </script>
{% endblock %}