{% extends '@SchoolApp/layout.html.twig' %}

{% block content %}
    <div class="col-md-12">
        <div class="card strpied-tabled-with-hover">
            <div class="card-header ">
                <h4 class="card-title">
                    <span class="col-sm-8">Frais scolaire</span>
                    <a href="{{ path('school_app_add_class') }}"><button class="btn btn-primary" style="margin-left: 600px">Définir les frais</button></a>
                </h4>
            </div>
            <div class="card-body table-full-width table-responsive">
                <table class="table table-hover table-striped">
                    <thead>
                    <th>Classe</th>
                    <th>Frais d'inscription</th>
                    <th>Frais annuelle</th>
                    <th></th>
                    </thead>
                    <tbody>

                    {% if cost %}
                        {% for cst in cost %}
                            <tr>
                                <td>{{ cst.class }}</td>
                                <td>{{ cst.registration }}</td>
                                <td>{{ cst. }}</td>
                                <td>{{ class.capNow }}</td>
                                <td>{{ class.level }}</td>
                                <td><a href="{{ path('school_app_details_class', {'id' : class.id}) }}"><span class="badge badge-pill badge-success">Mettre à jour</span></a></td>
                            </tr>
                        {% endfor %}
                    {% else %}

                    {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}