{% trans_default_domain 'FOSUserBundle' %}


<div class="login-form" style="margin-top: 10px">
    <div class="main-register">
        <div class="panel">
            <h2>School Admin</h2>
            <p>Creer un nouveau compte</p>
        </div>
        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'form-group'}}) }}
        <div class="form-group row">
            {{ form_label(form.username, "Nom d'utilisateur", {'label_attr': {'class': 'col-sm-5 col-form-label'}}) }}
            <div class="col-sm-7">
                {{ form_widget(form.username) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(form.email, "Adresse e-mail", {'label_attr': {'class': 'col-sm-5 col-form-label'}}) }}
            <div class="col-sm-7">
                {{ form_widget(form.email) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(form.plainPassword.first, "Mot de passe", {'label_attr': {'class': 'col-sm-5 col-form-label'}}) }}
            <div class="col-sm-7">
                {{ form_widget(form.plainPassword.first) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(form.plainPassword.second, "Répéter le mot de passe", {'label_attr': {'class': 'col-sm-5 col-form-label'}}) }}
            <div class="col-sm-7">
                {{ form_widget(form.plainPassword.second) }}
            </div>
        </div>

        <div class="col-sm-10">

        </div>
        <div class>
            <input class="btn btn-primary btn-lg btn-block" type="submit" value="{{ 'registration.submit'|trans }}" />
        </div>
        {{ form_end(form) }}
        <a href="{{ path('fos_user_profile_show') }}">Retour</a>
    </div>
    <p class="botto-text"> Designed by Ghost Studio</p>
</div>

