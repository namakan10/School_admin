{% trans_default_domain 'FOSUserBundle' %}


<div class="login-form" style="margin-top: 90px">
    <div class="main-div">
        <div class="panel">
            <h2>School Admin</h2>
            <p>Identifiez-vous</p>
        </div>
        <form action="{{ path("fos_user_security_check") }}" method="post" id="Login">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}
            <div class="form-group">
                <label for="username" class="text-uppercase">{{ 'security.login.username'|trans }}</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" class="form-control" />
            </div>

            <div class="form-group">
                <label for="password" class="text-uppercase">{{ 'security.login.password'|trans }}</label>
                <input type="password" id="password" name="_password" required="required" autocomplete="current-password" class="form-control"/>
            </div>

            <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"  class="btn btn-outline-primary btn-login float-right"/>
        </form>
    </div>
    <p class="botto-text"> Designed by Ghost Studio</p>
</div>

 {% if error %}
     <script type="text/javascript">
         alert('{{ error.messageKey|trans(error.messageData, 'security') }}');
     </script>
 {% endif %}





